{
  "dependencies": {
    "nunjucks": "^3.2.4",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "scripts": {
    "build": "webpack --config webpack.config.js && node a.js",
    "build:html": "gulp html",
    "build:iconfont": "gulp iconfont",
    "watch": "concurrently \"npx webpack --watch --config webpack.dev.js\" \"npx webpack server --config webpack.dev.js\" \"npm run watch:html\"",
    "watch:html": "concurrently \"chokidar \\\"src/html/**/**.html\\\" --command \\\"npm run build:html\\\"\" \"chokidar \\\"src/html/**/**.php\\\" --command \\\"npm run build:html\\\"\""
  }
}
